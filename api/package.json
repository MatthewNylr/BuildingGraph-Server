{
  "name": "buildinggraph-api",
  "version": "0.0.1",
  "description": "API app for GRANDstack",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-dev": "./node_modules/.bin/nodemon --inspect=9229 --watch src --ext js,graphql --exec babel-node  src/index.js",
    "build": "babel src -d build",
    "now-build": "babel src -d build; cp .env build; cp src/schema.graphql build",
    "copy-res": "node copyResources.js",
    "start": "npm run build && node build/index.js"
  },
  "author": "Will Reynolds",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.12.0",
    "convert-units": "^2.3.4",
    "dotenv": "^7.0.0",
    "graphql": "github:willhl/graphql-js-NPM#master",
    "graphql-auth-directives": "^2.2.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^4.0.8",
    "merge-graphql-schemas": "^1.7.8",
    "neo4j-driver": "^4.0.1",
    "neo4j-graphql-js": "^2.12.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  }
}
